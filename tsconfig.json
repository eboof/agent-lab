{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                 // ✅ modern ESM
    "moduleResolution": "NodeNext",     // ✅ works with .ts extensions
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true, // ✅ required for imports like "../server/mailer.ts"
    "outDir": "dist"
  },
  "include": ["server/**/*.ts", "agents/**/*.ts"]
}
